{
    "name": "blurbs",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "start": "node start.js",
        "start:server": "nodemon server.js --exec babel-node --presets es2015,stage-0",
        "start:client": "cd client && yarn start",
        "start:dev": "concurrently --kill-others-on-fail \"yarn start:server\" \"yarn start:client\"",
        "heroku-postbuild": "cd client && yarn && yarn run build"
    },
    "dependencies": {
        "babel-cli": "^6.26.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "bcrypt": "^3.0.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.18.3",
        "concurrently": "^3.6.0",
        "cors": "^2.8.4",
        "express": "^4.16.3",
        "express-jwt": "^5.3.1",
        "mongoose": "^5.2.4",
        "morgan": "^1.9.0",
        "nodemon": "^1.18.2",
        "rootpath": "^0.1.2"
    },
    "devDependencies": {
        "babel-polyfill": "^6.26.0",
        "babel-register": "^6.26.0"
    }
}
